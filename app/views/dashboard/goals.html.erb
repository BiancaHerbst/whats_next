<% if params[:from_linkto] %>
  <div class="container info">
    <h2>Awesome, you set a new goal</h2>
    <a href= "#<%= goal.id %>" > Start achieving now! </a>
    </div>
<% end %>

<ul class="nav nav-tabs justify-content-center">
  <li class="nav-item" id="goals_button">
    <%= link_to "Goals", "/dashboard/goals" %>
  </li>
  <li class="nav-item" id="achievements_button">
    <%= link_to "Achievements", "/dashboard/goals" %>
  </li>
</ul>



<div class="container my-4">
  <div class="row">
    <div class="col-4">
      <div class="sticky sticky-with-header sticky-top">
    <!--  <------------- Profile ---------------->
         <%= render 'shared/profile_summary'%>
    <!--  <------------- Goal Card ---------------->
      </div>
    </div>
      <div id="dashboard-goals">
        <div class="col-8">
          <% @goals.each do |goal| %>
              <%= render 'shared/goal_card', goal: goal %>
          <% end %>
        </div>
      </div>

    <div id="dashboard-achievements">
      <div class="col-8">
          <% @achievements.each do |goal| %>
            <%= render 'shared/achievement_card', achievement: goal %>
          <% end %>
      </div>
    </div>
  </div>
</div>





