
<div class="container">
  <div class="row">
    <div class="card col-8">
      <img class="rounded-circle" style="overflow:hidden; height:40px; width:40px; border-radius:50% box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
      border: white 1px solid; position:absolute; top: 15px; left: 15px;;"alt="avatar-bordered-card" src="https://kitt.lewagon.com/placeholder/users/sarahlafer">
      <%= render "shared/icon-add" %>
      <%= cl_image_tag achievement.photo.key, { class: "card-image"} %>
      <div class="card-body">
        <h5 class="card-title" style="text-transform: uppercase;"><strong><%=  achievement.title %></strong></h5>
        <p class="card-text" style="font-style: italic;"><%=achievement.motivation %></p>
        <a href="#" class="btn btn-flat">set goal</a>
      </div>

    </div>
  </div>
</div>

