
<div class="card h-100">

  <img class="rounded-circle" style="overflow:hidden; height:40px; width:40px; border-radius:50% box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  border: white 1px solid; position:absolute; top: 15px; left: 15px;;"alt="avatar-bordered-card" src="https://kitt.lewagon.com/placeholder/users/sarahlafer">
  <%= link_to new_goal_path do %>
    <%= render "shared/icon-add" %>
  <% end %>

  <%= cl_image_tag achievement.photo.key, { class: "card-img-top"} %>
  <div class="card-body">
    <div class="card-body-text">
      <h5 class="card-title" style="text-transform: uppercase;">
        <strong><%=  achievement.title %></strong>
      </h5>
      <p class="card-text" style="font-style: italic;">
        <%=achievement.motivation[0..60] %>...
      </p>
    </div>
      <%= link_to 'show more', new_goal_path, class: "btn btn-flat" %>
  </div>

</div>


